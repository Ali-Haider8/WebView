<resources>

    <style name="Theme.WebView" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryDark">#3700B3</item>
        <item name="colorAccent">#03DAC5</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="android:windowBackground">#FFFFFF</item>
        <item name="colorOnBackground">#000000</item>
        <item name="android:statusBarColor">#3700B3</item>
    </style>

    <!-- Toolbar Theme for Light Mode -->
    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="titleTextColor">@android:color/white</item>
    </style>

    <!-- Popup/Menu Theme for Light Mode -->
    <style name="PopupTheme" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:textColor">#000000</item>
    </style>

</resources>